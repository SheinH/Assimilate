{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches":  ["<all_urls>"],
      "js":       ["js/onload.js"],
      "all_frames":true,
      "run_at":   "document_start"
    }
  ],
  "manifest_version": 2
}
