{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ],
  "content_scripts": [
    {
      "matches":  ["<all_urls>"],
      "js":       ["js/onload.js"],
      "all_frames":true,
      "run_at":   "document_start"
    }
  ],
  "background": {
    "scripts": ["js/bg.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Toggle fonts"
  },
  "manifest_version": 2
}
